{
    "name": "casbin/dbal-adapter",
    "keywords": [
        "casbin",
        "database",
        "dbal",
        "rbac",
        "permission",
        "acl",
        "adapter"
    ],
    "description": "Database Abstraction Layer adapter for php-casbin. ",
    "authors": [
        {
            "name": "TechLee",
            "email": "leeqvip@gmail.com"
        }
    ],
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.0",
        "casbin/casbin": "^4.0",
        "doctrine/dbal": "^3.9|^4.0",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "php-coveralls/php-coveralls": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "CasbinAdapter\\DBAL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CasbinAdapter\\DBAL\\Tests\\": "tests/"
        }
    }
}
